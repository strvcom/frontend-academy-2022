{
  "extends": [
    "next/core-web-vitals",
    "@strv/react",
    "@strv/typescript",
    "@strv/typescript/react"
  ],

  "parserOptions": {
    "project": "./tsconfig.json"
  },

  "rules": {
    "react/require-default-props": [0],
    "import/extensions": [2, { "json": "always" }],
    "@typescript-eslint/no-misused-promises": [
      "error",
      {
        "checksVoidReturn": { "attributes": false }
      }
    ]
  }
}
